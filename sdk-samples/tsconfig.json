{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0,
    "rootDir": "."
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
